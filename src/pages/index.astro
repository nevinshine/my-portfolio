---
import BaseHead from '../components/BaseHead.astro';
import ProjectCard from '../components/projects/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Fetch and sort logs
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Nevin Shine | Security Engineer" description="Independent Research & MLSecOps" />
	</head>
	<body class="bg-[#050505] text-gray-300 font-sans min-h-screen flex flex-col items-center selection:bg-green-900 selection:text-white">

		<div class="fixed top-0 left-0 w-full z-50 bg-[#050505]/90 backdrop-blur-md border-b border-neutral-900 py-2 flex justify-between px-6 font-mono text-[9px] tracking-[0.2em] text-neutral-500 overflow-hidden whitespace-nowrap">
			<div class="flex gap-6 animate-pulse">
				<span class="flex items-center gap-1">
					<span class="text-green-500">●</span> UPTIME: 99.9%
				</span>
				<span class="hidden md:inline text-neutral-700">LOAD: 0.24 0.18 0.11</span>
				<span class="text-red-900 font-bold uppercase">Threat_Level: Low</span>
			</div>
			<div class="flex gap-6">
				<span class="hidden lg:inline text-neutral-700">KERNEL_VERSION: 6.5.0-STABLE</span>
				<span id="live-clock" class="text-neutral-400 font-bold">SYSTIME: --:--:--</span>
			</div>
		</div>

		<div class="w-full max-w-4xl px-6 pt-32 pb-20">
			
			<div class="text-[10px] font-mono text-neutral-700 mb-16 tracking-[0.4em] uppercase text-center border-b border-neutral-900/50 pb-6">
				Nürnberg (DE) <span class="text-neutral-800 mx-6">//</span> Kottayam (IN)
			</div>

			<header class="mb-20 flex flex-col md:flex-row justify-between items-start md:items-end gap-10">
				<div class="space-y-4">
					<h1 class="text-7xl font-bold text-white tracking-tighter leading-none">
						Nevin Shine
					</h1>
					<div class="space-y-1">
						<p class="text-xl text-neutral-400 font-light tracking-tight">
							Security Engineer <span class="text-neutral-700 mx-2">/</span> Independent Researcher
						</p>
						<p class="text-xs text-neutral-600 font-mono uppercase tracking-[0.1em]">
							Specialization: <span class="text-neutral-400">Kernel Hardening & Weightless AI</span>
						</p>
					</div>
				</div>

				<a href="/cv.pdf" download class="group flex items-center gap-4 px-6 py-4 border border-neutral-800 hover:border-green-500 transition-all duration-500 bg-neutral-900/20 rounded-sm">
					<div class="text-left">
						<span class="block text-[9px] text-neutral-600 uppercase tracking-[0.2em] group-hover:text-green-500/70">Secure_Dossier</span>
						<span class="block text-sm font-bold text-gray-300 group-hover:text-white">Download CV</span>
					</div>
					<div class="p-2 bg-neutral-900 rounded group-hover:bg-green-900/20 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-neutral-500 group-hover:text-green-500 transform group-hover:translate-y-0.5 transition-transform">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M12 12.75l-3.25-3.25m6.5 0L12 12.75M12 3v9.75" />
						</svg>
					</div>
				</a>
			</header>

			<div class="mb-24 grid grid-cols-2 md:grid-cols-4 gap-px bg-neutral-900 border border-neutral-900">
				<div class="bg-[#050505] p-5">
					<span class="block text-[9px] text-neutral-600 mb-2 tracking-widest uppercase">Core</span>
					<span class="text-sm text-gray-300 font-mono">Linux / Kernel</span>
				</div>
				<div class="bg-[#050505] p-5">
					<span class="block text-[9px] text-neutral-600 mb-2 tracking-widest uppercase">Languages</span>
					<span class="text-sm text-gray-300 font-mono">Python / C / Java</span>
				</div>
				<div class="bg-[#050505] p-5">
					<span class="block text-[9px] text-neutral-600 mb-2 tracking-widest uppercase">Security</span>
					<span class="text-sm text-gray-300 font-mono">DevSecOps / IDS</span>
				</div>
				<div class="bg-[#050505] p-5">
					<span class="block text-[9px] text-neutral-600 mb-2 tracking-widest uppercase">Research</span>
					<span class="text-sm text-gray-300 font-mono">MLSecOps / AI</span>
				</div>
			</div>

			<section class="mb-28">
				<h2 class="text-xs font-bold text-green-500 mb-10 flex items-center tracking-[0.3em] uppercase">
					// Active Operations
					<span class="ml-6 h-px bg-neutral-900 flex-grow"></span>
				</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<ProjectCard 
						title="Sentinel Sandbox"
						description="Investigating Weightless Neural Networks for zero-day kernel anomaly detection using ptrace-based syscall monitoring."
						tags={['Python', 'C', 'ptrace']}
						link="https://github.com/nevinshine/sentinel-sandbox"
						status="Active"
					/>
					<ProjectCard 
						title="100 Days of DevSecOps"
						description="A continuous documentation log of mastering system hardening and automated security pipelines over 14 weeks."
						tags={['Docs', 'CI/CD', 'Hardening']}
						link="https://github.com/nevinshine/100-days-of-devsecops"
						status="Ongoing"
					/>
				</div>
			</section>

			<section class="mb-28">
				<h2 class="text-xs font-bold text-neutral-600 mb-10 flex items-center tracking-[0.3em] uppercase text-center">
					// Recent_Logs
					<span class="ml-6 h-px bg-neutral-900/50 flex-grow"></span>
				</h2>
				<div class="space-y-3">
					{posts.map((post) => (
						<a href={`/blog/${post.slug}/`} class="flex justify-between items-center px-6 h-14 border border-neutral-900 hover:border-neutral-700 bg-neutral-900/10 group transition-all rounded-sm">
							<div class="flex items-center gap-6">
								<span class="text-[10px] font-mono text-neutral-700 group-hover:text-green-600 transition-colors uppercase">Day_{post.data.day}</span>
								<span class="text-sm text-neutral-400 group-hover:text-white transition-colors tracking-tight font-medium">{post.data.title}</span>
							</div>
							<span class="text-[10px] text-neutral-800 uppercase font-mono group-hover:text-neutral-600">{post.data.pubDate.toLocaleDateString()}</span>
						</a>
					))}
				</div>
			</section>

			<footer class="mt-20 pt-12 border-t border-neutral-900 text-center">
				<div class="mb-10 flex justify-center items-center gap-6">
					<span class="h-px w-10 bg-neutral-900"></span>
					<span class="text-[9px] font-mono text-green-900 uppercase tracking-[0.4em] font-bold">End of Transmission</span>
					<span class="h-px w-10 bg-neutral-900"></span>
				</div>

				<div class="flex justify-center gap-10 mb-10">
					<a href="https://github.com/nevinshine" target="_blank" class="text-[10px] font-mono text-neutral-500 hover:text-white transition-colors uppercase tracking-widest">[ GitHub ]</a>
					<a href="https://linkedin.com/in/nevin-shine-b403b932b" target="_blank" class="text-[10px] font-mono text-neutral-500 hover:text-white transition-colors uppercase tracking-widest">[ LinkedIn ]</a>
					<a href="mailto:your-email@example.com" class="text-[10px] font-mono text-neutral-500 hover:text-white transition-colors uppercase tracking-widest">[ Email ]</a>
				</div>

				<div class="text-[9px] text-neutral-800 font-mono tracking-widest">
					© 2025 NEVIN SHINE // SYSTEM SECURE
				</div>
			</footer>

		</div>

		<script is:inline>
			function updateClock() {
				const now = new Date();
				const timeString = now.getHours().toString().padStart(2, '0') + ":" + 
								   now.getMinutes().toString().padStart(2, '0') + ":" + 
								   now.getSeconds().toString().padStart(2, '0');
				const clockElement = document.getElementById('live-clock');
				if (clockElement) clockElement.innerText = "SYSTIME: " + timeString;
			}
			setInterval(updateClock, 1000);
			updateClock();
		</script>
	</body>
</html>
